pico-8 cartridge // http://www.pico-8.com
version 42
__lua__

function _init()
    height = 0
end

function _update()
    if(btn(2)) then
        height += 1
    end
    if(btn(3)) then
        height -= 1
    end
end

function draw_horse()
    --spr(1, 4, 48, 1, 2)
    spr(1, 4, 40, 2, 2)
    for i = 0, height-1 do
        spr(3, 12, 48-i, 1, 1)
        --print(i)
    end
    
    --spr(1, 4, 48-height-7, 2, 1)
    spr(19, 12, 48-height-7, 1, 1) -- Head
end

function _draw()
    poke(0x5f2c, 3) -- 64x64
    cls()
    draw_horse()
end



